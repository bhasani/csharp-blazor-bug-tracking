@page "/new-bug"
<h3>Add New Bug</h3>
<EditForm Model="@AdBug">
    <InputText @bind-Value="@AdBug.Title" placeholder="Enter Title" />
    <InputText @bind-Value="@AdBug.Description" placeholder="Enter Description" />
    <InputNumber @bind-Value="@AdBug.Priority" placeholder="Enter Priority" />

    <button type="submit">Add Bug</button>
</EditForm>

@code {
    public Bug AdBug { get; set; } = new Bug();

}
